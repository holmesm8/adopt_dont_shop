<h2>Pets Index</h2>
<% if @shelter %>
  <h3><%= "#{@shelter.name}'s Pets" %></h3>
  <p><%= @shelter.id %></p>
<% else %>
  <h3>Pets</h3>
<% end %>

<% @pets.each do |pet| %>
  <p>Doggy Name: <%= pet.name %></p>
  <img src="<%= pet.image %>"<br>
  <p>Age: <%= pet.age %></p>
  <p>Sex: <%= pet.sex %></p>
  <p>Shelter: <%= pet.shelter.name %></p>
  <br>
  <br>
<% end %>

<% if @shelter %>
<%= link_to 'Create Pet', "/shelters/#{@shelter.id}/pets/new" %>
<% end %>
